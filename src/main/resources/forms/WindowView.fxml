<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import org.beuwi.msgbots.platform.ui.control.MenuButton?>

<BorderPane fx:id="brpRootPane" prefWidth="1000.0" styleClass="root-pane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <AnchorPane fx:id="anpTitleBar" prefHeight="28.0" styleClass="title-bar">
         <children>
            <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="6.0" AnchorPane.topAnchor="5.0">
               <image>
                  <Image url="@../images/program.png" />
               </image>
            </ImageView>
            <HBox fx:id="hbxMenuBar" styleClass="menu-bar" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="0.0">
               <children>
                  <MenuButton fx:id="btnFileMenu" mnemonicParsing="false" prefHeight="28.0" prefWidth="42.0" text="File" />
                  <MenuButton fx:id="btnEditMenu" mnemonicParsing="false" prefHeight="28.0" prefWidth="42.0" text="Edit" />
                  <MenuButton fx:id="btnViewMenu" mnemonicParsing="false" prefHeight="28.0" prefWidth="42.0" text="View" />
                  <MenuButton fx:id="btnDebugMenu" mnemonicParsing="false" prefHeight="28.0" prefWidth="52.0" text="Debug" />
               </children>
            </HBox>
            <HBox fx:id="hbxButtonBar" styleClass="button-bar" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <Button fx:id="btnMinimize" mnemonicParsing="false" prefHeight="28.0" prefWidth="45.0" styleClass="minimize-button" />
                  <Button fx:id="btnMaximize" mnemonicParsing="false" prefHeight="28.0" prefWidth="45.0" styleClass="maximize-button" />
                  <Button fx:id="btnClose" mnemonicParsing="false" prefHeight="28.0" prefWidth="45.0" styleClass="close-button" />
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </top>
   <bottom>
      <AnchorPane fx:id="anpStatusBar" styleClass="status-bar" prefHeight="20.0" />
   </bottom>
</BorderPane>
