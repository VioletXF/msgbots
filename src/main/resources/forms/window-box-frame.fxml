<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="brpRootPane" styleClass="root-pane" stylesheets="@../styles/window-box-frame.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <AnchorPane fx:id="anpTitleBar" prefHeight="28.0" styleClass="title-bar" BorderPane.alignment="CENTER">
            <children>
                <HBox fx:id="hbxTitleBar" alignment="CENTER_LEFT" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <ImageView fx:id="imvWinIcon" fitHeight="18.0" fitWidth="18.0" pickOnBounds="true">
                            <image>
                                <Image url="@../images/program.png" />
                            </image>
                            <HBox.margin>
                                <Insets left="5.0" right="5.0" />
                            </HBox.margin>
                        </ImageView>
                        <Label fx:id="lblWinTitle" />
                    </children>
                </HBox>
                <Button fx:id="btnWinClose" prefWidth="45.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" HBox.hgrow="ALWAYS" />
            </children>
        </AnchorPane>
    </top>
</BorderPane>
