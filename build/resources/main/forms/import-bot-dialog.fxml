<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckBox?>

<?import org.beuwi.msgbots.platform.gui.control.Button?>
<?import org.beuwi.msgbots.platform.gui.control.HBox?>
<?import org.beuwi.msgbots.platform.gui.control.VBox?>
<?import org.beuwi.msgbots.platform.gui.control.TextField?>

<VBox spacing="25.0" prefWidth="450.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
	<items>
		<HBox fittable="true" prefHeight="30.0" spacing="10.0">
			<children>
				<TextField fx:id="txfScriptName" editable="false" HBox.hgrow="ALWAYS" />
				<Button fx:id="btnScriptOpen" styled="true" prefWidth="35.0" text="..." />
			</children>
		</HBox>
		<VBox fittable="true" spacing="20.0" VBox.vgrow="ALWAYS">
			<CheckBox fx:id="chkIsUnified" text="통합된 매개변수를 사용합니다." />
			<CheckBox fx:id="chkIsOffError" selected="true" text="런타임 에러 시 자동으로 봇의 전원을 끕니다. (권장)" />
		</VBox>
	</items>
</VBox>